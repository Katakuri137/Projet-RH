{% extends "../layouts/base.twig" %}

{% block title %}
	<title>Connexion</title>
{% endblock %}

{% block style %}
	<link rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block main %}
	<main>
		<section>
			<div>
				<h2>Bienvenue !</h2>
				<p>Connectez-vous à votre compte pour accéder à vos informations et gérer vos ressources.</p>
			</div>
			<div>
				<form action="/login" method="post">
					<div>
						<label for="siret">Numéro de SIRET</label>
						<input type="text" id="siret" name="siret" required pattern="\d{14}">
						{% if error and error.siret %}
							<span class="error">{{ error.siret }}</span>
						{% endif %}
					</div>
					<div>
						<label for="password">Mot de passe</label>
						<input type="password" id="password" name="password" required>
						{% if error and error.password %}
							<span class="error">{{ error.password }}</span>
						{% endif %}
					</div>
					<button type="submit">Se connecter</button>
					{% if error and error.general %}
						<p class="error">{{ error.general }}</p>
					{% endif %}
				</form>
				<p class="register-link">Pas encore inscrit ?
					<a href="/register">Créer un compte</a>
				</p>
			</div>
		</section>
	</main>
{% endblock %}

{% block scripts %}
	<script src="/js/login.js"></script>
{% endblock %}
